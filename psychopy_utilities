import psychopy.core
import psychopy.event
import psychopy.visual
import pandas as pd
import numpy as np
import psychopy.gui
import psychopy.sound
import os

class psychopy_func():

    def create_psychopy_window(self):
        win = psychopy.visual.Window(
            units = "pix",
            size = (1000, 1000),
            fullscr=True)
        return win

    def create_fixation_cross(self):
        fixation = psychopy.visual.ShapeStim(
            win=win,
            vertices=((0, -10), (0, 10), (0, 0), (-10, 0), (10, 0)),
            lineWidth=3,
            closeShape=False,
            lineColor="white")
        return fixation

    def create_psychopy_image(self, win, params, stimulus):
        img = psychopy.visual.ImageStim(
            win=win,
            image=os.path.normpath("Images/" + stimulus.name),  # opens a picture from Images folder
            units="pix",
            size=params[stim_size],
            pos=params[stim_position])
        return img

    def create_psychopy_sound(self):
        s = psychopy.sound.Sound(params[cue_sound_value], secs=params[time])  # creates a sound
        return s